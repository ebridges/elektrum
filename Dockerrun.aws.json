{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "elektron_app",
            "image": "roja/elektron_app:latest",
            "memory": 640,
            "essential": true,
            "mountPoints": [
                {
                    "containerPath": "/app/static",
                    "sourceVolume": "Static_Volume"
                }
            ],
            "environment": [
                {
                    "name": "ELEKTRON_ENV",
                    "value": "production"
                }
            ]
        },
        {
            "name": "elektron_proxy",
            "image": "roja/elektron_proxy:latest",
            "memory": 128,
            "essential": true,
            "mountPoints": [
                {
                    "containerPath": "/app/static",
                    "sourceVolume": "Static_Volume"
                }
            ],
            "links": [
                "elektron_app"
            ],
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ]
        }
    ],
    "volumes": [
        {
            "host": {
                "sourcePath": "static_volume"
            },
            "name": "Static_Volume"
        }
    ]
}
